<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hauptseite</title>
    <style>
        /* Styling für die Seite */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            width: 400px;
            margin: auto;
            border: 2px solid black;
            box-shadow: 0 0 10px gray;
            height: 100vh;
            overflow: hidden;
        }

        header {
            text-align: center;
            font-size: 1.5em;
            margin: 10px 0;
        }

        .container {
            padding: 10px;
            text-align: center;
        }

        .leaderboard {
            margin: 20px 0;
            text-align: left;
            padding: 0 20px;
        }

        .leaderboard ul {
            list-style-type: none;
            padding: 0;
        }

        .leaderboard li {
            font-size: 1.2em;
            margin: 5px 0;
        }

        .button {
            padding: 10px 20px;
            background-color: black;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 1em;
            border-radius: 5px;
        }

        .button:hover {
            background-color: gray;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Überschrift -->
        <header>Leaderboard</header>

        <!-- Leaderboard mit Top-Spielern -->
        <div class="leaderboard">
            <ul id="topPlayers">
                <!-- Die Top-5-Spieler werden hier dynamisch angezeigt -->
            </ul>
        </div>

        <!-- Button zum Starten des Spiels -->
        <button id="startGameBtn" class="button">Spiel starten</button>
    </div>

    <!-- JavaScript-Datei einbinden -->
    <script src="hauptseite.js"></script>
</body>
</html>
